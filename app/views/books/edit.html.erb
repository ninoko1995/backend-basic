<div class='col-lg-4 col-md-4'>
</div>

<div class='main-column col-lg-8 col-md-8'>
  <h1>Editing Comment</h1>
  <br>

    <%= form_for(@book) do |f| %>
      
      <div class="field">
        <%= f.label :title %>
        <span class='glyphicon glyphicon-pencil'></span><br>
        <%= f.text_field :title ,class: 'black'%>
      </div>

      <div class="field">
        <%= f.label :comment %>
        <span class='glyphicon glyphicon-pencil'></span><br>
        <%= f.text_area :comment ,class: 'black'%>
      </div>

      <div class="actions">
        <%= f.submit :class => 'btn btn-success' %> | 
        <%= link_to 'back', @book ,class: 'btn btn-primary',data: { confirm: 'Cancel your changes?'  }%> |
        <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Delete this Comment?' } ,class: 'btn btn-danger' %>
      </div>
    <% end %>
</div>
<div class='sub-column col-lg-3 col-md-3'>
    <div class='up-sub'>
      <h2>User info</h2>
      <br>
      <table class='table'>
        <tr>
          <td>H.N</td>
          <td>
            <%= @user.name %>
          </td>
        </tr>
        <tr>
          <td>email</td>
          <td><%=@user.email%></td>
        </tr>
        <% if current_user == @user %>
        	<tr>
	          <td><%= link_to 'edit',edit_user_path(@user),class: 'btn btn-primary'%></td>
	          <td><%= link_to 'logout',destroy_user_session_path(@user),method: :delete,class: 'btn btn-danger'%></td>
	        </tr>
	      <% end %>
      </table>
    </div>
</div>



<div class='col-lg-1 col-md-1 col-sm-1'>
</div>

<div class='main-column col-lg-8 col-md-8'>
  <h1>Comments</h1>
  <br>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Book Title <span class='glyphicon glyphicon-tags'></span></th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book)%></td>
          <td><%= link_to book.user.name, user_path(book.user_id)%></td>
        </tr>

      <% end %>
    </tbody>
  </table>

</div>

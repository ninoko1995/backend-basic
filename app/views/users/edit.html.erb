<div class='sub-column col-lg-3 col-md-3'>
  <div class='up-sub'>
   <h2>User info</h2>
     <br>
    <%= form_for(@user) do |f| %>
    <table class='table'>
      <tr>
        <td>H.N</td>
       <td>
          <%= f.text_field :name ,class: 'black'%>
        </td>
      </tr>
      <tr>
        <td>email</td>
        <td><%= f.text_field :email ,class: 'black'%></td>
      </tr>
      <tr>
         <td><%= f.submit :class => 'btn btn-primary' %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>



<div class='col-lg-1 col-md-1 col-sm-1'>
</div>

<div class='main-column col-lg-8 col-md-8'>
  <h1>Comments</h1>
  <br>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Book Title <span class='glyphicon glyphicon-tags'></span></th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book)%></td>
          <td><%= link_to book.user.name, user_path(book.user_id)%></td>
        </tr>

      <% end %>
    </tbody>
  </table>

</div>
